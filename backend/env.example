# MongoDB Connection URI
# For local MongoDB: mongodb://localhost:27017/inventory_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/inventory_db
MONGODB_URI=mongodb://localhost:27017/inventory_db

# Server Port
PORT=5000

# Environment (development, production)
NODE_ENV=development

# Expiry Alert Window (in days)
# Products expiring within this many days will be flagged
EXPIRY_ALERT_WINDOW=7

